fastlane_version "2.47.0"

default_platform :mac

platform :mac do

  ############################ PRE ############################

  before_all do
  end

  ######################## SETUP LANES ########################

  desc "Setup development"
  lane :setup do
  end

  ####################### PUBLIC LANES ########################

  desc "Runs all the tests"
  lane :test do
    slack(message: "Start Testing")
    scan_clipy
    slack(message: "Passed All Tests")
  end

  ####################### PRIVATE LANES ########################

  private_lane :scan_clipy do
    scan(
      workspace: "Clipy.xcworkspace",
      scheme: "Clipy",
      skip_build: true,
      verbose: true,
      clean: true
    )
  end

  ############################ POST ############################

  after_all do |lane|
  end

  error do |lane, exception|
    if lane == :scan_clipy
      slack(
        message: "Failed Tests: " + ENV['FL_REPORT_PATH'],
        success: false
      )
    end
  end
end
